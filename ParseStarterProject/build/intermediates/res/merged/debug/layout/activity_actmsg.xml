<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.parse.starter.ACTMsg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:focusable="true"
        android:focusableInTouchMode="true">
            <include layout="@layout/content_actmsg" />
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_keyboard_return_black_24dp"
        app:backgroundTint="#FFFFFF"
        android:alpha="0.6"
        android:layout_gravity="center|right"
        android:onClick="backToMain"/>-->
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/send_button"
            android:layout_alignParentRight="true"
            style="@style/ButtonRequestBox"
            android:text="@string/send_b"
            android:onClick="onClickSend"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/typing_box"
            android:inputType="textMultiLine"
            android:layout_alignTop="@+id/send_button"
            android:layout_toStartOf="@+id/send_button"
            android:layout_toLeftOf="@+id/send_button"
            android:padding="10dip"
            android:gravity="top"
            android:background="@drawable/typing_box_bg"
            />

    </RelativeLayout>
</LinearLayout>
